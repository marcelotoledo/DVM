%html
  %head
    %title DVM
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          = link_to 'DVM', '/', :class => 'brand'
          .nav-collapse
            %ul.nav
              - if User.find(session[:user_id]).company_id == 1
                %li{ :class => params[:controller] == 'companies' ? 'active' : '' }= link_to 'Empresas', companies_path
                %li{ :class => params[:controller] == 'users' ? 'active' : '' }= link_to 'UsuÃ¡rios', users_path
                %li{ :class => params[:controller] == 'campaigns' ? 'active' : '' }= link_to 'Campanhas', campaigns_path
                %li{ :class => params[:controller] == 'batches' ? 'active' : '' }= link_to 'Lotes', batches_path
              %li{ :class => params[:controller] == 'voucher' ? 'active' : '' }= link_to 'Vouchers', vouchers_path
              -#%li{ :class => params[:controller] == 'reports' ? 'active' : '' }= link_to 'Reports', '/'
            %ul.nav.pull-right
              %li.dropdown
                %a{:href => '#', :class => 'dropdown-toggle', "data-toggle" => 'dropdown' }
                  %i.icon-user
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to "Deslogar", '/log_out'
    = yield
