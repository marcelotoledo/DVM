- model_class = Batch.new.class
%h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:company_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @batches.each do |batch|
      %tr
        %td= link_to batch.id, batch_path(batch)
        %td= batch.name
        %td= batch.company_id
        %td=l batch.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_batch_path(batch), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), batch_path(batch), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_batch_path, :class => 'btn btn-primary'
