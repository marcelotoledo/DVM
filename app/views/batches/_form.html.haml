= form_for @batch, :html => { :class => 'form-horizontal' } do |f|
  - if @batch.errors.any?
    .alert.alert-error
      %h2 Form is invalid
      %ul
        - for message in @batch.errors.full_messages
          %li= message
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :company_id, :class => 'control-label'
    .controls
      = collection_select(:batch, :company_id, Company.all, :id, :name, :prompt => true)
  .control-group
    = f.label :voucher_type_id, :class => 'control-label'
    .controls
      = collection_select(:batch, :voucher_type_id, VoucherType.all, :id, :description, :prompt => true)
  .control-group
    = f.label :quantity, :class => 'control-label'
    .controls
      = f.number_field :quantity, :class => 'number_field span1'
  .control-group
    = f.label :value, :class => 'control-label'
    .controls
      = f.text_field :value, :class => 'number_field span1'
      %span.help-inline Ex: 100.00
  .control-group
    = f.label "Expiration date", :class => 'control-label'
    .controls
      = f.number_field :expiration, :class => 'number_field span2'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), batches_path, :class => 'btn'
