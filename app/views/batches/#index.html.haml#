= render "shared/header", :title => 'Batches'

- model_class = Batch.new.class

.row
  .offset1.span12
    %table.table.table-striped
      %thead
        %tr
          %th= model_class.human_attribute_name(:name)
          %th= model_class.human_attribute_name(:company_id)
          %th= model_class.human_attribute_name(:quantity)
          %th= model_class.human_attribute_name(:created_at)
          %th=t '.actions', :default => t("helpers.actions")
      %tbody
        - @batches.each do |batch|
          %tr
            %td= link_to batch.name, batch_path(batch)
            %td= Company.find_by_id(batch.company_id).name
            %td= batch.quantity
            %td= batch.created_at
            %td
              = link_to t('.destroy', :default => t("helpers.links.destroy")), batch_path(batch), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

    = link_to t('.new', :default => t("helpers.links.new")), new_batch_path, :class => 'btn btn-primary'
