= form_for @voucher, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :voucher, :class => 'control-label'
    .controls
      = f.text_field :voucher, :class => 'text_field'
  .control-group
    = f.label :status_id, :class => 'control-label'
    .controls
      = f.number_field :status_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), vouchers_path, :class => 'btn'
