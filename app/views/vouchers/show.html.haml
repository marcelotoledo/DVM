- model_class = @voucher.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:voucher) + ':'
  %br
  = @voucher.voucher
%p
  %strong= model_class.human_attribute_name(:status_id) + ':'
  %br
  = @voucher.status_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), vouchers_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_voucher_path(@voucher), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), voucher_path(@voucher), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
